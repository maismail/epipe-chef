# ePipe Configurations

reindex = false

# general configuration

connection = <%= @ndb_connectstring %>
database = <%= @database %>
meta_database = <%= @meta_database %>
hive_meta_database = <%= @hivemeta_database %>
poll_maxTimeToWait = 2000
lru_cap = 10000
recovery = true

# log level trace=0, debug=1, info=2, warn=3, error=4, fatal=5
log_level = 2
# Table tailer barrier type. EPOCH=0, GCI=1
barrier = 0


# hopsworks
hopsworks = true

# hiveCleaner
hivecleaner = true

# Watch Units, uncomment to enable

# watchUnit = WAIT_TIME
# watchUnit = BATCH_SIZE
# watchUnit = NUM_READERS

fs_mutations_tu = 1000
fs_mutations_tu = 5
fs_mutations_tu = 5

schamebased_tu = 1000
schamebased_tu = 5
schamebased_tu = 5

provenance_tu = 1000
provenance_tu = 5
provenance_tu = 5

# ElasticSearch configuration

elastic_addr = <%= @elastic_addr %>
index = <%= node['elastic']['epipe']['search_index'] %>
app_provenance_index = <%= node['elastic']['epipe']['app_provenance_index'] %>
elastic_batch = 5000
ewait_time = 5000

<% if node['elastic']['opendistro_security']['enabled'].casecmp?("true") %>
ssl_enabled = <%=node['elastic']['opendistro_security']['https']['enabled'].casecmp?("true") %>
ca_path = <%=node['elastic']['opendistro_security']['ca'] %>
username = <%=node['elastic']['opendistro_security']['epipe']['username'] %>
password = <%=node['elastic']['opendistro_security']['epipe']['password'] %>
<% end %>

# Metrics Server
stats = true
metricsServer = 0.0.0.0:<%= node['epipe']['metrics_port'] %>
